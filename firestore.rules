rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isEventCreator(){
      return request.auth.uid == resource.data.createdBy;
    }

    function isEmptyOrWhiteSpace(value){
        return !(value is string)
              || value.trim().size() == 0
    }

    function isAuthenticated() {
      return request.auth.uid != null;
    }

    match /users/{userId} {
      allow create: if request.auth.uid == userId
                    && !isEmptyOrWhiteSpace(request.resource.data.firstName) 
                    && !isEmptyOrWhiteSpace(request.resource.data.lastName);

      allow update: if request.auth.uid != null
      
      allow read: if request.auth.uid != null
    }

    match /events/{eventId}{
      allow read: if isAuthenticated();
      allow create: if request.auth.uid == request.resource.data.createdBy;
      allow delete: if isEventCreator();
      allow update: if resource.data.date.date() >= request.time.date()
                       && (isEventCreator() || (isAuthenticated() && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attendees', 'attendeesCount']))));
    }
  }
}